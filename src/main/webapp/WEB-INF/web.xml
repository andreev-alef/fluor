<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
 <context-param>
  <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
  <param-value>true</param-value>
 </context-param>
 <context-param>
  <param-name>primefaces.THEME</param-name>
  <param-value>none</param-value>
 </context-param>
 <context-param>
  <param-name>
    javax.faces.WEBAPP_RESOURCES_DIRECTORY
  </param-name>
  <param-value>/WEB-INF/resources</param-value>
</context-param>
 <servlet>
  <servlet-name>Faces Servlet</servlet-name>
  <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
  <load-on-startup>1</load-on-startup>
 </servlet>
 <servlet>
  <servlet-name>report</servlet-name>
  <servlet-class>ru.miacn.report.ReportServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>Faces Servlet</servlet-name>
  <url-pattern>*.xhtml</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>report</servlet-name>
  <url-pattern>/report</url-pattern>
 </servlet-mapping>
 <login-config>
  <auth-method>FORM</auth-method>
  <realm-name>FluorDomain</realm-name>
  <form-login-config>
   <form-login-page>/login.xhtml</form-login-page>
   <form-error-page>/login.xhtml</form-error-page>
  </form-login-config>
 </login-config>
  	<security-role>
		<role-name>Базовый</role-name>
	</security-role>
	<security-role>
		<role-name>Первичный</role-name>
	</security-role>
	<security-role>
		<role-name>Расширенный</role-name>
	</security-role>
	<security-role>
		<role-name>Экспертный</role-name>
	</security-role>
	<security-role>
		<role-name>Полный</role-name>
	</security-role>
	<security-role>
		<role-name>Технический</role-name>
	</security-role>		 
 <security-constraint>
  <web-resource-collection>
   <web-resource-name>Просмотр</web-resource-name>
   <url-pattern>/listman.xhtml</url-pattern>
   <url-pattern>/viewman.xhtml</url-pattern>
   <url-pattern>/report</url-pattern>
   <url-pattern>/resources/components/*</url-pattern>
   <http-method>GET</http-method>
   <http-method>POST</http-method>
  </web-resource-collection>
  <auth-constraint>
   <role-name>Базовый</role-name>
   <role-name>Первичный</role-name>
   <role-name>Расширенный</role-name>
   <role-name>Экспертный</role-name>
   <role-name>Полный</role-name>
   <role-name>Технический</role-name>
  </auth-constraint>
 </security-constraint>
 <security-constraint>
 <web-resource-collection>
  <web-resource-name>редактирование</web-resource-name>
   <url-pattern>/editman.xhtml</url-pattern>
   <http-method>GET</http-method>
   <http-method>POST</http-method>
  </web-resource-collection>
  <auth-constraint>
   <role-name>Первичный</role-name>
   <role-name>Расширенный</role-name>
   <role-name>Экспертный</role-name>
   <role-name>Полный</role-name>
   <role-name>Технический</role-name>
  </auth-constraint>
 </security-constraint>
  <security-constraint>
 <web-resource-collection>
  <web-resource-name>Полный</web-resource-name>
   <url-pattern>/planman.xhtml</url-pattern>
   <http-method>GET</http-method>
   <http-method>POST</http-method>
  </web-resource-collection>
  <auth-constraint>
   <role-name>Полный</role-name>
   <role-name>Технический</role-name>
  </auth-constraint>
 </security-constraint>
 <security-constraint>
  <web-resource-collection>
   <web-resource-name>Администрирование</web-resource-name>
   <url-pattern>/administration/*</url-pattern>
   <url-pattern>/upload.xhtml</url-pattern>
   <http-method>GET</http-method>
   <http-method>POST</http-method>
  </web-resource-collection>
  <auth-constraint>
   <role-name>Технический</role-name>
  </auth-constraint>
 </security-constraint>
 <security-constraint>
  <web-resource-collection>
    <web-resource-name>Public</web-resource-name>
    	<description>Matches a few special pages.</description>
    	<url-pattern>/login.xhtml</url-pattern>
    	<url-pattern>/resources/*</url-pattern>
  	</web-resource-collection>
</security-constraint>
<session-config>
	<session-timeout>33</session-timeout>
</session-config>
<welcome-file-list>
	<welcome-file>listman.xhtml</welcome-file>
</welcome-file-list>

<mime-mapping>
	<extension>otf</extension>
	<mime-type>application/font-sfnt</mime-type>
</mime-mapping>
</web-app>
